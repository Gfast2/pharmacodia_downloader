	})
	
	 
	/*底部banner效果*/
	$(window).scroll(function(){
		var top = document.documentElement.scrollTop || document.body.scrollTop;
		var _obj = $(".footBanner");
		var inputWidths=$('.ydwrap-fixed .search-bottom .InputBox input').width();
		
		/*if(_obj.data("loaded") == "true")
		{
			return;
