	var offTop = $(".yd_search_out").offset().top;
		$(window).scroll(function(){
			if($(window).scrollTop()>offTop){
				$(".yd_search_out").addClass("yd_search_fixed")
			}else{
				$(".yd_search_out").removeClass("yd_search_fixed")
			}
		})
	

	
