	    var _time = 0;
	    $(".yd-word-head>span").each(function () {
	        setTimeout(function (obj) {
	            var _this = $(obj);
	            _this.css({ opacity: 0.2 }).animate({ opacity: 1 }, 300);
	        }, _time, this);
	        _time += 100;
	    });
	}, 4000);
	
	
	

	/*固定返回顶部等效果*/
	$(".fixedtool a.a1").hover(function(){
		$(this).children('span').hide();
